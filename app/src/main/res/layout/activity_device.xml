<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/deviceActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_button"
            android:fontFamily="@font/font_awesome_6_pro_regular"
            android:text="\uf104"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btnDeviceSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_settings" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviceActivityToolbar">

        <Button
            android:id="@+id/btnTogglePower"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:text="Power" />

        <Button
            android:id="@+id/btnSpeedChange"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:text="Change Speed" />

        <Button
            android:id="@+id/btnTempUp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:text="Temp up" />

        <Button
            android:id="@+id/btnTempDwn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:text="Temp Down" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
