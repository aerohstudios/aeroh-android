<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/devicesActivityDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DevicesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/devicesActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/toolbar_heading_1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginBottom="-10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbar_heading_2"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/hamburgerIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_hamburger" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/btnAddDevice"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/background_ripple_effect_add_device_button"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/add_new_device_text"
                android:textColor="@color/white"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_positive_sign"
                android:layout_marginHorizontal="25dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/deviceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/devices_txt"
            app:layout_constraintTop_toTopOf="@id/btnAddDevice"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="35dp"
            />

        <ListView
            android:id="@+id/devices_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="60dp"
            android:divider="@drawable/divider"
            android:dividerHeight="1dp"
            app:layout_constraintTop_toTopOf="@id/deviceText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/noDeviceView"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/no_devices"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_devices_txt1"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_devices_txt2"
                android:textColor="@color/grey"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/devicesActivityNavigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/devices_navigation_header"
        app:itemHorizontalPadding="30dp"
        app:itemIconPadding="15dp"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/white"
        app:itemTextAppearance="@style/MyTextAppearance"
        app:itemTextColor="@color/white"
        app:menu="@menu/devices_navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
